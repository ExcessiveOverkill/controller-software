        {
            "type": "cmake",
            "label": "Build",
            "command": "build",
            "targets": [
                "all"
            ],
            "preset": "${command:cmake.activeBuildPresetName}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "CMake template build task"
        },
        {
            "label": "Copy Files to Zynq",
            "type": "shell",
            "command": "scp",
            "args": [
                "-rp",
                "${workspaceFolder}/zynq_files/*",
                "zynq:/home/em-os/"
            ],
            "dependsOn": "Build",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        },

        {
            "label": "Stop zynq processes",
            "type": "shell",
            "command": "ssh",
            "args": [
                "zynq",
                "pkill",
                "-f",
                "/home/em-os/controller/"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        },
        
        {
            "label": "Run Binary on Zynq",
            "type": "shell",
            "command": "ssh",
            "args": [
                "zynq",
                "chmod +x /home/em-os/controller/bin/controller_core && /home/em-os/controller/bin/controller_core"
            ],
            "dependsOn": "Copy Files to Zynq",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },

        {
            "label": "Launch gdbserver on Zynq",
            "type": "shell",
            "command": "ssh",
            "args": [
                "zynq",
                "gdbserver :1234 /home/em-os/controller/bin/controller_core"
            ],
            "dependsOn": "Copy Files to Zynq",
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            },
            "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": ".",
          }
        }
      ]
        },
        {
            "label": "Deploy and Debug on Zynq",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build",
                "Copy Files to Zynq",
                "Launch gdbserver on Zynq"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "type": "shell",
            "command": "echo Deploy and Debug completed."
        }
    ],
    "version": "2.0.0"
}